{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"],
      "@screens/*": ["screens/*"],
      "@utils/*": ["utils/*"],
      "@navigation/*": ["navigation/*"],
      "@styles/*": ["styles/*"],
      "@api/*": ["api/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
